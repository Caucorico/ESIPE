<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:id="@+id/activity_feed_container">

    <FrameLayout
        android:id="@+id/activity_feed_feed_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="fr.uge.atomsyndicator.FeedFragment"
            android:id="@+id/activity_feed_feed_fragment"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_feed_article_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7">

        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            class="fr.uge.atomsyndicator.ArticleFragment"
            android:id="@+id/activity_feed_article_fragment" />

    </FrameLayout>

</LinearLayout>